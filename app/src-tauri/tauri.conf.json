{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Etcd Workbench"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      },
      "os": {
        "all": true
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "clipboard": {
        "all": false,
        "writeText": true
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "Etcd Workbench",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "closable": true,
        "focus": false,
        "titleBarStyle": "Overlay"
      },
      {
        "label": "setting",
        "title": "Settings",
        "width": 1000,
        "height": 750,
        "resizable": false,
        "center": true,
        "url": "/?page=setting",
        "decorations": false,
        "titleBarStyle": "Overlay",
        "transparent": true,
        "visible": false,
        "focus": false
      },
      {
        "label": "splashscreen",
        "title": "Etcd Workbench",
        "width": 350,
        "height": 100,
        "center": true,
        "url": "splashscreen.html",
        "decorations": false,
        "resizable": false,
        "transparent": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY4QUQ5NEE1MERGMjQ5NDAKUldSQVNmSU5wWlN0K0dNZDlnTlBqQzZObzBNTUxwZnFLaEhKRTBZNTFWa1piYnpvVHVmYTVIZG4K",
      "endpoints": [
        "https://tzfun.github.io/etcd-workbench/etcd-workbench-update.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
